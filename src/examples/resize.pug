extends /_layout.pug

append style
  link(rel="stylesheet", href="/examples/css/resize.css")

append script_body
  script(src="/examples/js/common_units.js")
  script(src="/examples/js/resize.js")

block pageBody
  div.pl-test resize
    div.pl-test_section
      h1.pl-test_heading one
      p.pl-test_p  (max-width: 1200px) ==
        span.pl-test_span.pl-test_span--one

    div.pl-test_section
      h1.pl-test_heading turn
      p.pl-test_p (max-width: 979px) ==
        span.pl-test_span.pl-test_span--turn

    div.pl-test_section
      h1.pl-test_heading cross
      p.pl-test_p (min-width: 980px) ==
        span.pl-test_span.pl-test_span--cross

    div.pl-test_section
      h1.pl-test_heading on
      p.pl-test_p (max-width: 767px) ==
        span.pl-test_span.pl-test_span--on

    div.pl-test_section.pl-test_section--display
      div.pl-test_display.pl-test_display--1200 width 1200px
        div.pl-test_display.pl-test_display--980 width: 980px
          div.pl-test_display.pl-test_display--768 width: 768px

